<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" styleClass="titlescreen" stylesheets="@../Hangman.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TitleController">
   <bottom>
      <HBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="newGameButton" mnemonicParsing="false" onAction="#newGameHandler" text="New Game">
               <font>
                  <Font name="Yu Gothic UI Semibold" size="12.0" />
               </font></Button>
            <Button fx:id="loadGameButton" mnemonicParsing="false" onAction="#loadGameHandler" text="Load Game">
               <font>
                  <Font name="Yu Gothic UI Semibold" size="12.0" />
               </font></Button>
            <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#settingsHandler" stylesheets="@../Hangman.css" text="Settings">
               <font>
                  <Font name="Yu Gothic UI Semibold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#buttonSelectHandler" text="Back">
               <font>
                  <Font name="Yu Gothic UI Semibold" size="12.0" />
               </font></Button>
            <Button fx:id="quitButton" mnemonicParsing="false" onAction="#buttonSelectHandler" text="Quit">
               <font>
                  <Font name="Yu Gothic UI Semibold" size="12.0" />
               </font></Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
